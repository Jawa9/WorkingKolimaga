<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.olchi.u007test5.MainActivity">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="225dp"
        android:layout_height="49dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="25dp"
        android:text="Кнопка для перехода на новый ктивити  >>>"
        android:textAlignment="center"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="224dp"
        android:layout_height="24dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="27dp"
        android:text="Тут кнопка для Смайлика >>>"
        android:textAlignment="center"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:layout_width="380dp"
        android:layout_height="38dp"
        android:layout_marginTop="0dp"
        android:text="Hello World! =P"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/textView2" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="224dp"
        android:layout_height="24dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="16dp"
        android:text="Тут кнопка для Алерта >>>"
        android:textAlignment="center"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/btnAlert"
        android:layout_width="139dp"
        android:layout_height="41dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="7dp"
        android:onClick="onClick"
        android:text="Alert"
        android:textColor="@android:color/holo_red_dark"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/btnSmile"
        android:layout_width="138dp"
        android:layout_height="45dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:onClick="onClickBtnSmile"
        android:text="|-_-|"
        android:textAllCaps="false"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAlert" />

    <Button
        android:id="@+id/btnActivity"
        android:layout_width="140dp"
        android:layout_height="51dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="15dp"
        android:onClick="onNewActivity"
        android:text="Activity"
        android:textColor="@android:color/holo_red_light"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSmile" />

</android.support.constraint.ConstraintLayout>
